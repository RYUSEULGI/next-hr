generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  provider      String?
  address       String?
  planType      PlanType?
  accounts      Account[]
  Plan          Plan[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Content {
  id           BigInt        @id(map: "content_pkey") @default(autoincrement())
  name         String?       @default("") @db.VarChar
  enName       String?       @default("") @db.VarChar
  nation       String?       @default("")
  directors    String?       @default("")
  year         BigInt?
  categoryId   BigInt?
  ContentGenre ContentGenre? @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model ContentGenre {
  id         BigInt    @id(map: "genre_pkey") @default(autoincrement())
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  name       String?   @default("")
  Content    Content[]
}

model ContentType {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  title      String?  @db.VarChar
  type       String?
}

model Plan {
  id        BigInt    @id @default(autoincrement())
  name      PlanType?
  startDate DateTime  @default(now()) @db.Timestamptz(6)
  endDate   String?
  userId    String?
  User      User?     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

enum ContentTypeEnum {
  RANK
  LIST
}

enum PlanType {
  BASIC
  STANDARD
  PREMIUM
}
